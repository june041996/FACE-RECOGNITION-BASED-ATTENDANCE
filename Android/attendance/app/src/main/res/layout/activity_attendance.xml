<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AttendanceActivity">
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_attendance"
        android:layout_centerHorizontal="true"
        android:text="@string/attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_location"
        android:layout_below="@+id/btn_attendance"
        android:layout_centerHorizontal="true"
        android:text="Check Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Nhấn vào nút điểm danh để nhận diện khuôn mặt"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv"
        android:layout_below="@+id/btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
</RelativeLayout>